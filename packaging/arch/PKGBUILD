pkgname=facilethings
pkgver=1.0
pkgrel=1
pkgdesc="An unofficial wrapper for FacileThings"
arch=('x86_64')
url="https://gitlab.com/lukas-mertens/facilethings-linux"
license=('MIT')
source=("https://gitlab.com/lukas-mertens/facilethings-linux/-/jobs/604648512/artifacts/raw/build/FacileThings-linux-x64.tar.gz")
md5sums=('428f97ad7f6ea5c7ebaa8bc5167b7c42')

package() {
	      # copy binary files
	      mkdir -p "$pkgdir/opt"
        mv "$srcdir/build/FacileThings-linux-x64" "$pkgdir/opt/facilethings"
				# symlink executable
	      mkdir -p "$pkgdir/usr/bin"
				ln -s "${pkgdir}/opt/facilethings/FacileThings" "${pkgdir}/usr/bin/facilethings"
}

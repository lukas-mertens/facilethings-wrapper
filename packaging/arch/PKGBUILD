pkgname=facilethings
pkgver=1.2
pkgrel=3
pkgdesc="An unofficial wrapper for FacileThings"
arch=('x86_64')
url="https://gitlab.com/lukas-mertens/facilethings-linux"
license=('MIT')
source=("https://gitlab.com/lukas-mertens/facilethings-wrapper/-/jobs/1304495386/artifacts/raw/build/FacileThings-linux-x64.tar.gz")
sha512sums=('9d20420ec5de4a4188cbcf94104bab8b283f607b157be17025db86a85e4e096e1579df144136de65c693f55d0c3c44e2b875433e7d5c66cad858c86e57752f4d')

package() {
	      # copy binary files
	      mkdir -p "$pkgdir/opt"
        mv "$srcdir/build/FacileThings-linux-x64" "$pkgdir/opt/facilethings"
				# symlink executable
	      mkdir -p "$pkgdir/usr/bin"
				ln -s "/opt/facilethings/FacileThings" "$pkgdir/usr/bin/facilethings"
}

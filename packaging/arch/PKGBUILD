pkgname=facilethings
pkgver=1.2
pkgrel=3
pkgdesc="An unofficial wrapper for FacileThings"
arch=('x86_64')
url="https://gitlab.com/lukas-mertens/facilethings-linux"
license=('MIT')
source=("https://gitlab.com/lukas-mertens/facilethings-wrapper/-/jobs/1304495386/artifacts/file/build/FacileThings-linux-x64.tar.gz")
sha512sums=('302fcd7fe3ed403a6f12f63eceafa4f43597ff5c220a2b6b99f61f298aba08b1e3c298c7c9f76755802cd9e32a4386b06ab2df49dd20dee480d1660c23f3c701')

package() {
	      # copy binary files
	      mkdir -p "$pkgdir/opt"
        mv "$srcdir/build/FacileThings-linux-x64" "$pkgdir/opt/facilethings"
				# symlink executable
	      mkdir -p "$pkgdir/usr/bin"
				ln -s "/opt/facilethings/FacileThings" "$pkgdir/usr/bin/facilethings"
}

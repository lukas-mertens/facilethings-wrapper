pkgname=facilethings
pkgver=1.0
pkgrel=1
pkgdesc="An unofficial wrapper for FacileThings"
arch=('x86_64')
url="https://gitlab.com/lukas-mertens/facilethings-linux"
license=('MIT')
source=("https://gitlab.com/lukas-mertens/facilethings-linux/-/jobs/588389060/artifacts/raw/build/FacileThings-linux-x64.tar.gz")
md5sums=('3684ab5b3e3825e39809560b4a9241df')

package() {
	      # copy binary files
	      mkdir -p "$pkgdir/opt"
        mv "$srcdir/build/FacileThings-linux-x64" "$pkgdir/opt/facilethings"
				# symlink executable
	      mkdir -p "$pkgdir/usr/bin"
				ln -s "${pkgdir}/opt/facilethings/FacileThings" "${pkgdir}/usr/bin/facilethings"
}

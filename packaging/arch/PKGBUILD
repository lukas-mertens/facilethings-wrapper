pkgname=facilethings
pkgver=1.3
pkgrel=4
pkgdesc="An unofficial wrapper for FacileThings"
arch=('x86_64')
url="https://gitlab.com/lukas-mertens/facilethings-linux"
license=('MIT')
source=("https://gitlab.com/lukas-mertens/facilethings-wrapper/-/jobs/1474141523/artifacts/raw/build/FacileThings-linux-x64.tar.gz")
sha512sums=('6250b84d04836752a00b9f5172018e13ed4cc14a57c03a76873d8b0222c7273d0afed4f86394abc6fe13f29212bfa2a6924044588348a9e62fb40d428dc58309')

package() {
	      # copy binary files
	      mkdir -p "$pkgdir/opt"
        mv "$srcdir/build/FacileThings-linux-x64" "$pkgdir/opt/facilethings"
				# symlink executable
	      mkdir -p "$pkgdir/usr/bin"
				ln -s "/opt/facilethings/FacileThings" "$pkgdir/usr/bin/facilethings"
}
